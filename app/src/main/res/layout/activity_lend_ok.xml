<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.LendOkActivity"
    style="@style/bodyCss">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="218dp"
      android:layout_height="185dp"
      android:layout_marginStart="61dp"
      android:layout_marginTop="70dp"
      android:layout_marginEnd="62dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/yahoo_logo" />

  <TextView
      android:id="@+id/yaho_title"
      style="@style/yahooTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="121dp"
      android:layout_marginTop="80dp"
      android:layout_marginEnd="121dp"
      android:text="@string/yahoo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />

  <Button
      android:id="@+id/btnbacklend"
      style="@style/button"
      android:layout_width="match_parent"
      android:layout_height="52dp"
      android:text="@string/back_to_home"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/yahoo_desc" />

  <TextView
      android:id="@+id/yahoo_desc"
      style="@style/yahooDesc"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="25dp"
      android:layout_marginTop="36dp"
      android:layout_marginEnd="25dp"
      android:text="@string/yahoo_desc"
      android:ellipsize="none"
      android:singleLine="false"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/yaho_title" />

</androidx.constraintlayout.widget.ConstraintLayout>